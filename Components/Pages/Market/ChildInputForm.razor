@page "/birthday-market/input-form"

<PageTitle>Child Input Form</PageTitle>

@inject NavigationManager Navigation

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 text-center">
            <h2 class="fw-bold" style="color:#12807F;">
                Child Information
            </h2>
            <p class="mt-3" style="color:#555; font-size:1rem;">
                Please provide details about the child for whom you're shopping.
            </p>
            <br><br>

            <div class="card">
                <div class="card-body">
                    <form @onsubmit="HandleSubmit" class="mt-4 text-start">
                        <label class="form-label fw-semibold">Child's Name *</label>
                        <input @bind="ChildName" type="text" class="form-control mb-4" placeholder="Enter child's name" required />

                        <label class="form-label fw-semibold">Child's Age *</label>
                        <input @bind="ChildAge" type="number" class="form-control mb-4" placeholder="Enter age" min="1" max="18" required />

                        <label class="form-label fw-semibold">Favorite Color</label>
                        <input @bind="FavoriteColor" type="text" class="form-control mb-4" placeholder="Optional" />

                        <!-- Error Message -->
                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ErrorMessage
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn px-5 py-2 text-white fw-semibold"
                                style="background-color:#DB9A2F; border-radius:4px; min-width:200px;">
                                NEXT
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string ChildName { get; set; } = "";
    private int ChildAge { get; set; }
    private string FavoriteColor { get; set; } = "";
    private string ErrorMessage { get; set; } = "";

    private void HandleSubmit()
    {
        if (string.IsNullOrWhiteSpace(ChildName) || ChildAge <= 0)
        {
            ErrorMessage = "Please provide a valid name and age.";
        }
        else
        {
            // TODO: Save child info (e.g., to a service or state)
            // For now, redirect to shop
            Navigation.NavigateTo("/birthday-market/startshop");
        }
    }
}